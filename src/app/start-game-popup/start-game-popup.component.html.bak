<div class="modal fade" id="startGamePopup" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
   	       <img src="assets/graphics/images/superpowers.png" title="Superpowers!" height=30> &nbsp;<b>Start Game</b>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

		<div *ngIf="user.rank==0">
			<div class="borderClass2" style="text-align: center;">
				<div style="font-size: 20px; font-weight: 700;">Training Campaign</div>
				<div><font color=black>This is a short exercise for you to practice the basic game play.</font></div>
				<img src="assets/graphics/images/map.png" width=100% style="max-width: 400px;">
				<div><img src="assets/graphics/images/flag2.gif" width="60"></div>
				<div style="font-size: 18px; font-weight: 700;"><img ng-src="graphics/flag{{selectedNum}}.gif" height=30> European Union</div>
				<div style="color: gray;">You will start as the leader of the European Union</div>
				<div><font color=#700><b>Objective:</b> Conquer Russia and China!</font></div>
			   	<div style="margin: 15px;" ><button (click)="resumeGame()" type="button" class="btn ptp-red roundButton medium glowRed">Start Game!</button></div>
			</div>
		</div>

            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>